{
  "compilerOptions": {
    
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    // "types" : ["node"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Absolute imports */
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },

    /* Linting */
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*","untyped.d.ts","webpack.config.ts","tailwind.config.ts","postcss.config.ts" // *** The files TypeScript should type check ***
  ],
  "exclude": ["node_modules", "build", "dist"]
}
